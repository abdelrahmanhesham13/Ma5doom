<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash"
    tools:context=".StartupActivity">

    <android.support.constraint.Guideline
        android:id="@+id/vg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/vg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <android.support.constraint.Guideline
        android:id="@+id/hg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <Button
        android:id="@+id/recep_owner"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_blue"
        android:drawablePadding="16dp"
        android:elevation="4dp"
        android:fontFamily="@font/kufiboldir"
        android:drawableRight="@drawable/ic_hand"
        android:gravity="center"
        android:onClick="owner"
        android:paddingRight="30dp"
        android:text="صاحب استراحه"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/vg2"
        app:layout_constraintStart_toStartOf="@+id/vg1"
        app:layout_constraintTop_toTopOf="@+id/hg1" />


    <Button
        android:id="@+id/client"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_blue"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_client_startup"
        android:elevation="4dp"
        android:gravity="center"
        android:onClick="client"
        android:paddingRight="30dp"
        android:text="عميل"
        android:fontFamily="@font/kufiboldir"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/vg2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/vg1"
        app:layout_constraintTop_toBottomOf="@+id/recep_owner" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/recep_owner"
        app:layout_constraintEnd_toStartOf="@+id/vg2"
        app:layout_constraintStart_toStartOf="@+id/vg1"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"/>


</android.support.constraint.ConstraintLayout>