<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kufibold"
            android:textSize="12sp"
            android:text="التواصل مع ادارة التطبيق"
            android:layout_marginTop="20dp"
            style="@style/conditionTitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingRight="13dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_phone_login"
                android:tint="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:fontFamily="@font/kufi"
                android:textSize="12sp"
                android:layout_marginRight="4dp"
                android:textColor="#212121"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01005087893336"
                android:layout_marginRight="36dp"
                android:textColor="#212121"
                android:layout_gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_mobile"
                android:tint="#212121"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number"
                android:fontFamily="@font/kufi"
                android:textSize="12sp"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01005087893336"
                android:layout_marginRight="30dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التواصل مع ادارة التطبيق"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kufibold"
            android:textSize="12sp"
            style="@style/conditionTitle"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/kufi"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_person_outline"
            android:hint="الاسم"
            app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
            app:layout_constraintRight_toRightOf="@+id/v_guideline2"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/et_email"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kufi"
            android:textSize="12sp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_mail"
            android:hint="البريد الالكتروني"
            app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
            app:layout_constraintRight_toRightOf="@+id/v_guideline2"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/et_title"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_edit"
            android:hint="عنوان الموضوع"
            android:fontFamily="@font/kufi"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
            app:layout_constraintRight_toRightOf="@+id/v_guideline2"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/et_subject"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_edit"
            android:hint="اترك رسالتك"
            android:fontFamily="@font/kufi"
            android:textSize="12sp"            app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
            app:layout_constraintRight_toRightOf="@+id/v_guideline2"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo" />


        <Button
            android:id="@+id/btn_send"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ارسال الان"
            android:layout_margin="50dp"
            android:fontFamily="@font/kufi_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_blue"/>
    </LinearLayout>

</ScrollView>