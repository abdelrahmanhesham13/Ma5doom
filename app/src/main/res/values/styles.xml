<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ReverseRest" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    >
    <!-- Base application theme. -->
    <style name="AddRest" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for settings preference theme --></style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorAccent</item> <!-- activated color change as you wish -->
        <item name="android:textColor">@android:color/white</item> <!-- checkbox text color -->
    </style>

    <!--style home page -->
    <style name="categoryText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/kufi_ar_d</item>
    </style>

    <style name="weekPrice">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_text">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="restName">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listLabeles">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="conditionTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="conditionSubject">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:colorControlNormal">@android:color/darker_gray</item>
    </style>

    <style name="restFilter">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:fontFamily">@font/kufi</item>
        <item name="android:background">@drawable/btn_filter_background</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>



    <style name="holoSpinner" parent="Widget.AppCompat.Spinner.Underlined">
            <!-- Color when pressed -->
            <item name="colorAccent">@color/gray</item>
            <!-- Default color for the dropdown arrow and line -->
            <item name="colorControlNormal">@color/gray</item>
    </style>



</resources>
